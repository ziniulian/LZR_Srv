<!DOCTYPE html>
<html>
	<head id="hDoe">
		<title>自选股操作</title>
		{{#def.meta}}

		<style type="text/css">
			.clrR {
				color: red;
			}
			.clrB {
				color: blue;
			}
		</style>
	</head>

	<body>
		<div id="boso" class="boso">
			<div class="logo">
				<a href="javascript: dco.flush();">刷新</a>
				&nbsp; &nbsp; &nbsp; <a href="{{=it.tmpo.url.rout}}opSet/">添加</a>
				<a class="logohome" target="_blank" href="/"></a>
			</div>
			{{? it.comDbSrvReturn.length > 0}}
				<div>
					<table>
						<tbody>
							<tr>
								<th width="5%"></th>
								<th width="10%">nam</th>
								<th width="15%">P</th>
								<th width="10%">F</th>
								<th width="15%">C</th>
								<th width="15%">Z</th>
								<th width="15%">S</th>
								<th width="15%">B</th>
							</tr>
						</tbody>
						<tbody>
							{{~it.comDbSrvReturn:o:i}}
								<tr>
									<td>{{=o.ord}}</td>
									<td ><a href="{{=it.tmpo.url.rout}}opSet/{{=o.id}}">{{=o.alias || o.nam}}</a></td>
									<td id="p{{=o.id}}" title="{{=o.v}}"></td>	<!-- 现价 -->
									<td id="f{{=o.id}}"></td>	<!-- 幅度 -->
									<td id="c{{=o.id}}"></td>	<!-- 成本 -->
									<td id="z{{=o.id}}"></td>	<!-- 斩 -->
									<td id="s{{=o.id}}"></td>	<!-- 卖 -->
									<td id="b{{=o.id}}"></td>	<!-- 买 -->
								</tr>
							{{~}}
							<tr>
								<td></td>
								<td>SZ</td>
								<td id="p399"></td>
								<td id="f399"></td>
							</tr>
							<tr>
								<td></td>
								<td>SH</td>
								<td id="p000"></td>
								<td id="f000"></td>
							</tr>
						</tbody>
					</table>
				</div>
			{{?}}
			<div id="mark" class="Lc_nosee">
				<br /><br />请稍候 ...
				<br /><a href="javascript: dco.hidMark();">取消</a>
			</div>
		</div>
	</body>

	<script type="text/javascript">
		var dco = {
			url: "http://hq.sinajs.cn/list=",
			odat: {{=it.tmpo.tls.utJson.toJson(it.comDbSrvReturn)}},	/* 原始数据 */
			dat: undefined,	/* 整理后的数据 */
			busy: false,
			jDoe: null,

			init: function () {
				dco.dat = dco.hdDat(dco.odat);

				/* 键盘控制 */
				document.onkeyup = function (e) {
					if (e.keyCode === 32) {
						/* 空格 */
						dco.flush();
					} else if (e.keyCode === 13) {
						/* 回车键 */
						dco.hidMark();
						dco.flush();
					}
				};
			},

			hdDat: function (od) {
				var r = [], u = "", i, j, k, u, v, b, o;
				for (i = 0; i < od.length; i ++) {
					o = od[i];
					r.push({
						id: o.id,
						ec: o.ec + o.id,
						b: o.buy,	/* 买点 */
						s: [],	/* 止盈 */
						z: [],	/* 止损 */
						c: 0,	/* 当前价 */
						f: 0,	/* 涨幅 */
						v: o.v,	/* 总量 */
						p: o.p	/* 总价 */
					});
					dco.url += "s_" + r[i].ec + ",";

					if (o.v) {
						/* 计算成本价 */
						b = document.getElementById("c" + o.id);
						b.innerHTML = Math.ceil(o.p*100.4/o.v) / 100;
						b.title = o.v + " 股,\n" + o.p;
					}
					for (j = o.m.length - 1; j >= 0; j --) {
						/* 止盈：从最小的找起，小于最小的显示 */
						if (o.m[j].s) {
							r[i].s.push([o.m[j].s*1.01, o.m[j].s, o.m[j].v]);
						}
						/* 止损：从最大的找起，大于最大的显示 */
						for (k = 0; k < o.m[j].c.length; k ++) {
							v = o.m[j].c[k];
							b = true;
							for (u = 0; u < r[i].z.length; u ++) {
								if (r[i].z[u][0] === v) {
									r[i].z[u][1] += o.m[j].v;
									b = false;
									break;
								} else if (v > r[i].z[u][0]) {
									break;
								}
							}
							if (b) {
								r[i].z.splice(u, 0, [v, o.m[j].v]);
							}
						}
					}
				}
				r.push({id:"399", ec:"sz399001"});
				r.push({id:"000", ec:"sh000001"});
				dco.url += "s_sz399001,s_sh000001";
				return r;
			},

			flush: function () {
				if (!dco.busy) {
					dco.showMark();
					dco.jDoe = document.createElement("script");
					dco.jDoe.src = dco.url; 
					dco.jDoe.onload = dco.hdflush;
					hDoe.appendChild(dco.jDoe);
				}
			},

			/* 回调处理 */
			hdflush: function () {
				var i, j, a, d, p;
				hDoe.removeChild(dco.jDoe);
				dco.jDoe = null;
				for (i = 0; i < dco.dat.length; i ++) {
					p = dco.dat[i];
					a = window["hq_str_s_" + p.ec];
					if (a) {
						a = a.split(",");
						if (a.length > 1) {
							p.c = a[1] - 0;
							p.f = a[3] - 0;
							d = document.getElementById("p" + p.id);
							d.innerHTML = p.c.toFixed(2);
							d = document.getElementById("f" + p.id);
							d.innerHTML = p.f.toFixed(2);
							d = document.getElementById("c" + p.id);
							if (d) {
								/* 斩 */
								d = document.getElementById("z" + p.id);
								d.className = "";
								d.innerHTML = "";
								if (p.z.length) {
									for (j = 0; j < p.z.length; j ++) {
										if (p.c > p.z[j][0]) {
											dco.setV(d, p.c, p.z[j][0], p.z[j][1]);
											break;
										}
									}
								}

								/* 卖 */
								d = document.getElementById("s" + p.id);
								d.className = "";
								d.innerHTML = "";
								if (p.s.length) {
									for (j = 0; j < p.s.length; j ++) {
										if (p.c < p.s[j][0]) {
											dco.setV(d, p.c, p.s[j][1], p.s[j][2]);
											break;
										}
									}
								}

								/* 买，找最接近的一个位置*/
								d = document.getElementById("b" + p.id);
								d.className = "";
								d.innerHTML = "";
								if (p.b.length) {
									for (j = p.b.length - 0; j >= 0; j --) {
										if (p.c > p.b[j]) {
											dco.setV(d, p.c, p.b[j]);
											break;
										}
									}
									if (j < 0) {
										dco.setV(d, p.c, p.b[0]);
									}
								}
							}
						}
					}
				}
				dco.hidMark();
			},

			/* 修改值 */
			setV: function (d, c, p, v) {
				var f = p / c * 100 - 100;
				d.innerHTML = p.toFixed(2);
				d.title = v ? f.toFixed(2) + "_" + v : f.toFixed(2);

				/* 接近预定范围 */
				if (f < 0) {
					f *= -1;
				}
				if (f < 1) {
					d.className = "clrR";
				} else if (f < 3) {
					d.className = "clrB";
				}
			},

			/* 显示等候页面 */
			showMark: function () {
				dco.busy = true;
				mark.className = "mark";
			},

			/* 隐藏等候页面 */
			hidMark: function () {
				dco.busy = false;
				mark.className = "Lc_nosee";
			}
		};

		document.body.onload = dco.init;
	</script>
</html>
